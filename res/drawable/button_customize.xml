<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- default #97e08f  -->
    <item android:state_pressed="false" android:state_focused="false">
        <shape >
            <solid
                android:color="#5E8EBA" />
            <stroke 
                android:width="1dp"
                android:color="#5E8EBA" />
            <corners
               	android:bottomLeftRadius="0dip"
                android:topRightRadius="00dip"
                android:topLeftRadius="00dip"
                android:bottomRightRadius="0dip"/>
            <padding
                android:left="0dp"
                android:right="0dp"
                android:top="0dp"
                android:bottom="0dp" />
        </shape>
    </item>
  
    <!-- button focused -->
    <item android:state_pressed="false" android:state_focused="true">
        <shape >
            <solid
                android:color="#2FA4FF" />
            <stroke 
                android:width="1dp"
                android:color="#2FA4FF" />
            <corners
               	android:bottomLeftRadius="0dip"
                android:topRightRadius="0dip"
                android:topLeftRadius="0dip"
                android:bottomRightRadius="0dip"/>
            <padding
                android:left="0dp"
                android:right="0dp"
                android:top="0dp"
                android:bottom="0dp" />
        </shape>
    </item>
  
   <!-- button pressed -->
    <item android:state_pressed="true" android:state_focused="false">
        <shape >
            <solid
                android:color="#AFC8DC" />
            <stroke 
                android:width="1dp"
                android:color="#AFC8DC" />
            <corners
               	android:bottomLeftRadius="1dip"
                android:topRightRadius="1dip"
                android:topLeftRadius="1dip"
                android:bottomRightRadius="1dip"/>
            <padding
                android:left="0dp"
                android:right="0dp"
                android:top="0dp"
                android:bottom="0dp" />
        </shape>
    </item>
  
    
</selector>