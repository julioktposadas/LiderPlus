<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout 
     android:id="@+id/item_selector"
     android:background="@drawable/item_selector"
     android:padding="5.0dip" 
     android:layout_width="fill_parent" 
     android:layout_height="wrap_content"
	 xmlns:android="http://schemas.android.com/apk/res/android">

  <ProgressBar
				android:id="@+id/progresAvance"
				android:layout_width="105dp"
				android:layout_height="105dp"
				style="?android:attr/progressBarStyleHorizontal"
				android:layout_marginRight="6.0dip" 
				android:layout_alignParentTop="true" 
   				 android:layout_alignParentBottom="true" 
				android:indeterminate="false"
       			android:max="100"
       			android:progress="30"
				android:secondaryProgress="100"
				android:progressDrawable="@drawable/a_progressbar1" />


  <LinearLayout
     android:orientation="vertical" 
    android:id="@+id/linearLayout2" 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent" 
   android:layout_toRightOf="@id/progresAvance" 
    android:layout_centerInParent="true" >

      <TextView
          android:id="@+id/t_vendedor"
          android:layout_width="178dp"
          android:layout_height="wrap_content"
          android:lines="1"
          android:text="TextView"
          android:textColor="#4285F4"
          android:textStyle="bold" />

      <TextView
          android:id="@+id/t_total_ped"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="TextView" />

      <TextView
          android:id="@+id/t_direccion"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:lines="1"
          android:paddingRight="5dp"
          android:text="TextView" />

      <TextView
          android:id="@+id/t_avance"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="TextView" />

      <TextView
          android:id="@+id/titulo_cliente"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="TextView" />

      <TextView
          android:id="@+id/t_fecha_hora"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="TextView" />

      

  </LinearLayout>

  <TextView
      android:id="@+id/txt_avance"
      
      android:layout_width="105dp"
      android:layout_height="105dp"
      android:layout_marginRight="6.0dip" 
      android:layout_alignParentTop="true" 
   	  android:layout_alignParentBottom="true" 
      android:gravity="center_vertical|center_horizontal"
      android:text="30%"
      android:textColor="#6495ED"
      android:textSize="25sp"
      android:textStyle="bold" />

  <TextView
      android:id="@+id/tex_titulo"
      android:layout_width="105dp"
      android:layout_height="105dp"
      android:layout_alignLeft="@+id/txt_avance"
      android:layout_alignTop="@+id/progresAvance"
      android:gravity="bottom|center_horizontal"
      android:paddingBottom="14.0dip"
      android:text="Eficiencia"
      android:textSize="10dp"
      android:textStyle="bold" />
  
 <ImageView android:id="@+id/icon1"
    android:layout_width="32dp" 
    android:layout_height="fill_parent" 
    android:src="@drawable/navigate_right_icon"
    android:layout_centerVertical="true" 
    android:layout_marginRight="2.0dip" 
    android:layout_alignParentRight="true" />



</RelativeLayout>